<how_to_fix>
{% if error_type == 'unhashable_key' %}
<error_type>Unquoted Jinja2 Variable</error_type>
<fix>Add quotes around Jinja2 variables with {{ '{{' }} {{ '}}' }}</fix>

<example>
{% if fixed_line %}
WRONG:   {{ problematic_line.strip() }}
CORRECT: {{ fixed_line.strip() }}
{% else %}
WRONG:   msg: {{ '{{' }} item {{ '}}' }}
CORRECT: msg: "{{ '{{' }} item {{ '}}' }}"
{% endif %}
</example>
{% elif error_type == 'mapping_values' %}
<error_type>Unquoted Colon in String</error_type>
<fix>Quote the entire value when it contains colons</fix>

<example>
WRONG:   when: status is search('error: found')
CORRECT: when: "status is search('error: found')"
</example>
{% else %}
<error_type>YAML Syntax Error</error_type>
<fix>Check indentation, quotes, and YAML structure</fix>
{% endif %}
</how_to_fix>

